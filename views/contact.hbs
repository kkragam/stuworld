<div class="container-fluid"> 
  <h2>{{contact.title}}</h2> 
<div id="successemail" class="alert alert-success collapse" role="alert">
    <button type="button" class="close alert-close">&times;</button>
    
     
    {{contact.successMessage}}
</div>
<div id="failemail" class="alert alert-danger collapse" role="alert">
    <button type="button" class="close alert-close">&times;</button>
    {{contact.failMessage}}
</div>

  <form role="form" id="contactform" data-toggle="validator" submit="javascript:return;" onsubmit="javascript:return;" >
    <div class="form-group">
      <label for="name">{{contact.name}}:</label>
      <input type="text" class="form-control" name="name" placeholder="{{contact.nameph}}"  data-minlength="3"  >
    </div>  
    <div class="form-group">
      <label for="email">{{contact.email}}:</label>
      <input type="email" class="form-control" name="email" placeholder="{{contact.emailph}}"  >
    </div>
    <div class="form-group">
      <label for="subject">{{contact.subject}}:</label>
      <input type="text" class="form-control" name="subject" id="subject" placeholder="{{contact.subjectph}}"  >
    </div>
    <div class="form-group">
      <label for="message">{{contact.message}}:</label>
      <textarea  class="form-control" name="message" placeholder="{{contact.messageph}}" rows="{{contact.messagerows}}"  ></textarea>
    </div> 
    <button id="submitcontact" type="submit" class="btn btn-default">{{contact.submittitle}}</button>
  </form>
   <script>
        $("#contactform").submit(function(event) {$("#contactform [type='submit']").attr("disabled", true);sendmessage();event.preventDefault();});
   </script>  
</div>